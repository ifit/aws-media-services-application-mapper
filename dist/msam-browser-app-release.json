{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Media Services Application Mapper (MSAM) browser application (ID: 1594682397)",
    "Resources": {
        "MSAMAppBucketOriginAccessIdentity": {
            "Type": "AWS::CloudFront::CloudFrontOriginAccessIdentity",
            "Properties": {
                "CloudFrontOriginAccessIdentityConfig": {
                    "Comment": {
                        "Fn::Join": [
                            "", [
                                "Origin Access Identity for ",
                                {
                                    "Ref": "MSAMBrowserAppBucket"
                                }
                            ]
                        ]
                    }
                }
            }
        },
        "MSAMAppBucketCloudFrontDistribution": {
            "Type": "AWS::CloudFront::Distribution",
            "Properties": {
                "DistributionConfig": {
                    "Comment": {
                        "Fn::Join": [
                            "", [
                                "CDN for ",
                                {
                                    "Ref": "MSAMBrowserAppBucket"
                                }
                            ]
                        ]
                    },
                    "DefaultCacheBehavior": {
                        "TargetOriginId": {
                            "Ref": "MSAMBrowserAppBucket"
                        },
                        "ViewerProtocolPolicy": "https-only",
                        "DefaultTTL": 31536000,
                        "MinTTL": 31536000,
                        "MaxTTL": 31536000,
                        "AllowedMethods": [
                            "HEAD",
                            "GET"
                        ],
                        "CachedMethods": [
                            "HEAD",
                            "GET"
                        ],
                        "ForwardedValues": {
                            "QueryString": true
                        }
                    },
                    "DefaultRootObject": "index.html",
                    "Enabled": true,
                    "Origins": [{
                        "DomainName": {
                            "Fn::Join": [
                                "", [{
                                        "Ref": "MSAMBrowserAppBucket"
                                    },
                                    ".s3.amazonaws.com"
                                ]
                            ]
                        },
                        "Id": {
                            "Ref": "MSAMBrowserAppBucket"
                        },
                        "S3OriginConfig": {
                            "OriginAccessIdentity": {
                                "Fn::Join": [
                                    "", ["origin-access-identity/cloudfront/",
                                        {
                                            "Ref": "MSAMAppBucketOriginAccessIdentity"
                                        }
                                    ]
                                ]
                            }
                        }
                    }],
                    "PriceClass": "PriceClass_All",
                    "Restrictions": {
                        "GeoRestriction": {
                            "RestrictionType": "none",
                            "Locations": []
                        }
                    },
                    "ViewerCertificate": {
                        "CloudFrontDefaultCertificate": "true",
                        "MinimumProtocolVersion": "TLSv1"
                    }
                }
            }
        },
        "MSAMAppBucketPolicy": {
            "Type": "AWS::S3::BucketPolicy",
            "Properties": {
                "Bucket": {
                    "Ref": "MSAMBrowserAppBucket"
                },
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Id": "PolicyForCloudFrontPrivateContent",
                    "Statement": [{
                        "Effect": "Allow",
                        "Principal": {
                            "CanonicalUser": {
                                "Fn::GetAtt": [
                                    "MSAMAppBucketOriginAccessIdentity",
                                    "S3CanonicalUserId"
                                ]
                            }
                        },
                        "Action": "s3:GetObject",
                        "Resource": {
                            "Fn::Join": [
                                "", [{
                                        "Fn::GetAtt": [
                                            "MSAMBrowserAppBucket",
                                            "Arn"
                                        ]
                                    },
                                    "/*"
                                ]
                            ]
                        }

                    }]
                }
            }
        },
        "MSAMBrowserAppBucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "CorsConfiguration": {
                    "CorsRules": [{
                        "AllowedHeaders": [
                            "*"
                        ],
                        "AllowedMethods": [
                            "GET"
                        ],
                        "AllowedOrigins": [
                            "*"
                        ],
                        "MaxAge": "3000"
                    }]
                }
            }
        },
        "MSAMWebContentResource": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Fn::Join": [
                            "-", [{
                                    "Ref": "BucketBasename"
                                },
                                {
                                    "Ref": "AWS::Region"
                                }
                            ]
                        ]
                    },
                    "S3Key": "msam/webcontent_resource_1594682397.zip"
                },
                "Environment": {
                    "Variables": {
                        "BUILD_STAMP": "1594682397",
                        "ZIP_DIGEST": "67d4a27d866e9ccd5d126d1083ea5f1f4e17ee09",
                        "BUCKET_BASENAME": { "Ref": "BucketBasename" }
                    }
                },
                "Handler": "lambda_function.lambda_handler",
                "Description": "MSAM Lambda for custom CloudFormation resource for loading web application",
                "MemorySize": 2560,
                "Role": {
                    "Ref": "WebIAMRoleARN"
                },
                "Runtime": "python3.6",
                "Timeout": 300
            }
        },
        "MSAMWebContent": {
            "Type": "AWS::CloudFormation::CustomResource",
            "Properties": {
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "MSAMWebContentResource",
                        "Arn"
                    ]
                },
                "BucketName": {
                    "Ref": "MSAMBrowserAppBucket"
                },
                "StackName": {
                    "Ref": "AWS::StackName"
                },
                "BUILD_STAMP": "1594682397",
                "ZIP_DIGEST": "67d4a27d866e9ccd5d126d1083ea5f1f4e17ee09"
            }
        },
        "MSAMWebInvalidationResource": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Code": {
                    "S3Bucket": {
                        "Fn::Join": [
                            "-", [{
                                    "Ref": "BucketBasename"
                                },
                                {
                                    "Ref": "AWS::Region"
                                }
                            ]
                        ]
                    },
                    "S3Key": "msam/webcontent_resource_1594682397.zip"
                },
                "Environment": {
                    "Variables": {
                        "BUILD_STAMP": "1594682397",
                        "ZIP_DIGEST": "67d4a27d866e9ccd5d126d1083ea5f1f4e17ee09",
                        "BUCKET_BASENAME": { "Ref": "BucketBasename" }
                    }
                },
                "Handler": "cfn_invalidate_resource.handler",
                "Description": "MSAM Lambda for custom resource for invalidating CloudFront after update",
                "MemorySize": 2560,
                "Role": {
                    "Ref": "WebIAMRoleARN"
                },
                "Runtime": "python3.6",
                "Timeout": 300
            }
        },
        "MSAMWebInvalidator": {
            "DependsOn": ["MSAMAppBucketCloudFrontDistribution", "MSAMBrowserAppBucket"],
            "Type": "AWS::CloudFormation::CustomResource",
            "Properties": {
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "MSAMWebInvalidationResource",
                        "Arn"
                    ]
                },
                "BucketName": {
                    "Ref": "MSAMBrowserAppBucket"
                },
                "StackName": {
                    "Ref": "AWS::StackName"
                },
                "BUILD_STAMP": "1594682397",
                "ZIP_DIGEST": "67d4a27d866e9ccd5d126d1083ea5f1f4e17ee09",
                "DistributionId": {
                    "Ref": "MSAMAppBucketCloudFrontDistribution"
                }
            }
        }
    },
    "Parameters": {
        "BucketBasename": {
            "Default": "rodeolabz",
            "Description": "This is basename of the bucket that holds the MSAM code base.",
            "Type": "String",
            "AllowedPattern": "\\S+",
            "MinLength": 1,
            "ConstraintDescription": "Please enter a value for this field."
        },
        "WebIAMRoleARN": {
            "Description": "This is the IAM Role ARN for the Web app Lambda functions.",
            "Type": "String",
            "AllowedPattern": "\\S+",
            "MinLength": 1,
            "ConstraintDescription": "Please enter a value for this field."
        }
    },
    "Outputs": {
        "MSAMBrowserURL": {
            "Value": {
                "Fn::Join": [
                    "", [
                        "https://",
                        {
                            "Fn::GetAtt": [
                                "MSAMAppBucketCloudFrontDistribution",
                                "DomainName"
                            ]
                        }
                    ]
                ]
            },
            "Description": "URL for the MSAM browser application via CloudFront"
        },
        "MSAMBrowserAppBucket": {
            "Value": {
                "Fn::Join": [
                    "", [
                        "https://s3.console.aws.amazon.com/s3/buckets/",
                        {
                            "Ref": "MSAMBrowserAppBucket"
                        },
                        "/?region=",
                        {
                            "Ref": "AWS::Region"
                        }
                    ]
                ]
            },
            "Description": "MSAM browser application bucket"
        }
    }
}
